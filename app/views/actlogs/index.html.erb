<p id="notice"><%= notice %></p>

<h1>Actlogs</h1>


  <div class="btn-group" role="group" aria-label="header">
  <tr>
    <th>
      <button type="button" class="btn btn-default">
        <%= link_to '記録', new_actlog_path %>
      </button>
    </th>
    <th>
      <button type="button" class="btn btn-default">
        カテゴリ追加
      </button>
    </th>
    <th>
      <button type="button" class="btn btn-default">
        <%= link_to 'カテゴリ集計', sum_actlogs_path %>
      </button>
    </th>
  </tr>
  </div>

  <div class="container">
    <table class="table">    
      <thead>
        <tr>
          <th>日付</th>
          <th>カテゴリ</th>
          <th>開始時間</th>
          <th>終了時間</th>
          <th>時間</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @actlogs.each do |actlog| %>
          <tr>
            <td><%= actlog.date %></td>
            <td><%= actlog.category %></td>
            <td><%= actlog.starttime %></td>
            <td><%= actlog.endtime %></td>
            <td><%= actlog.time %></td>
            <td><%= link_to '編集', edit_actlog_path(actlog) %></td>
            <td><%= link_to '削除', actlog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
</table>

<br>


